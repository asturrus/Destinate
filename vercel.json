{
  "version": 2,
  "buildCommand": "npm install && npm run vercel-build",
  "outputDirectory": "dist/public",
  "ignoreCommand": "echo 'Skipping server folder'",
  "builds": [
    { "src": "vite.config.ts", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.ts" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
