{
  "version": 2,
  "builds": [
    { "src": "client/vite.config.ts", "use": "@vercel/static-build" }
  ],
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "../dist/public",
  "ignoreCommand": "echo 'Skipping server folder'",
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
